        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTestClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="243.199" Width="488.971">
    <Grid>
        <StackPanel>
            <Label Content="Email" />
            <TextBox x:Name="mail" />
            <Label Content="Password" />
            <PasswordBox x:Name="pass" />
            <Button Content="Enter" Margin="10" Click="Button_Click" />
            <Button Content="Registr" />
            <Button Content="Forget password" />
        </StackPanel>
    </Grid>
</Window>
