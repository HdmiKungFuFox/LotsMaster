<Window x:Class="MyTestClient.ShowInfoAboutLot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTestClient"
        mc:Ignorable="d"
        Title="ShowInfoAboutLot" Height="496.306" Width="867.678">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Image Width="300" Height="300" />
            <TextBox x:Name="LStart" />
            <TextBox x:Name="LFinish" />
            <TextBox x:Name="LName" />
            <TextBlock x:Name="LAbout" />
            <TextBox x:Name="LStartPrice" />
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock x:Name="LHistory"/>
            <Label Content="Last bet" />
            <TextBox x:Name="LLastBet" />
            <StackPanel Orientation="Horizontal">
                <TextBox MinWidth="300" x:Name="LBet"/>
                <Button Content="Make bet" Click="Button_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
