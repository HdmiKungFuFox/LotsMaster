                        <Image Grid.Column="0" x:Name="Ph2" Tag="2" MouseLeftButtonDown="OpenLotWindowHandler"></Image>
                        <TextBlock Grid.Column="1" x:Name="SettingsImg2"></TextBlock>
                    </Grid>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid Margin="10" >
